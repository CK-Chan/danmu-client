{
  "name": "danmu-client",
  "version": "1.1.0-dev",
  "description": "Danmu client",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start-lin": "electron . --enable-transparent-visuals --disable-gpu",
    "build": "electron-builder",
    "release": "build"
  },
  "build": {
    "productName": "danmu-client",
    "appId": "com.zsxsoft.danmu.client",
    "compression": "maximum",
    "files": [
      "lib/**/*",
      "index.html",
      "index.js",
      "main.js",
      "panel.html",
      "panel.js",
      "package.json"
    ],
    "extraFiles": [
      "config.js"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["zip"]
    },
    "win": {
      "target": ["7z"]
    },
    "linux": {
      "target": ["zip"]
    },
    "directories": {
      "buildResources": "resources"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zsxsoft/danmu-client.git"
  },
  "keywords": [
    "danmu",
    "danmaku"
  ],
  "author": "zsx <zsx@zsxsoft.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zsxsoft/danmu-client/issues"
  },
  "homepage": "https://github.com/zsxsoft/danmu-client",
  "dependencies": {
    "socket.io-client": "^2.0.3",
    "windows-caption-color": "0.0.6"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "node-gyp": "^3.6.2"
  }
}
