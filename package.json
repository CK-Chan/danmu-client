    "nw-penetrate": "^0.0.3",
    "socket.io-client": "^1.3.6"
  },
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-commands": "^0.1.8",
    "grunt-contrib-copy": "^0.8.1",
    "grunt-contrib-jshint": "^0.11.2",
    "node-webkit-builder": "^1.0.13",
    "nw-gyp": "^0.12.4"
